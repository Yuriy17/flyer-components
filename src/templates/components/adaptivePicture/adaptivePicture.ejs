<picture>
  <source
    type="image/webp"
    media="(min-width: 576px)"
    srcset="/images/desktop/<%= env.fileName %>_desktop.webp, /images/desktop/<%= env.fileName %>_desktop@2x.webp 2x"
  />
  <source
    type="image/<%= env.type %>"
    media="(min-width: 576px)"
    srcset="/images/desktop/<%= env.fileName %>_desktop.<%= env.type %>, /images/desktop/<%= env.fileName %>_desktop@2x.<%= env.type %> 2x"
  />
  <source
    type="image/webp"
    srcset="/images/mobile/<%= env.fileName %>_mobile.webp, /images/mobile/<%= env.fileName %>_mobile@2x.webp"
  />
  <source
    type="image/<%= env.type %>"
    srcset="/images/mobile/<%= env.fileName %>_mobile.<%= env.type %>, /images/mobile/<%= env.fileName %>_mobile@2x.<%= env.type %>"
  />
  <img
    class="<%= env.imageClass %>"
    src="/images/mobile/<%= env.fileName %>_desktop.<%= env.type %>"
    srcset="/images/mobile/<%= env.fileName %>_desktop@2x.<%= env.type %> 2x"
    alt="<%= env.alt %>"
    width="<%= env.defaultWidth %>"
    height="<%= env.defaultHeight %>"
  />
</picture>
