<sl-select 
  clearable 
  class="form__select <%= env.classes %>"
  name="<%= env.name %>" 
  label="<%= env.label %>" 
  placeholder="<%= env.placeholder %>" 
  autocomplete="<%= env.autocomplete %>"
  id="<%= env.id %>"
  data-validate="<%= env.validate %>"
  <% if(env.clearable) {%>clearable<% } %>
>
  <sl-option value="birds">Birds</sl-option>
  <sl-option value="cats">Cats</sl-option>
  <sl-option value="dogs">Dogs</sl-option>
  <sl-option value="other">Other</sl-option>
</sl-select>