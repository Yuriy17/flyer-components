<sl-input 
  <% if(env.classes){ %>class="<%=env.classes%>" <% } %>
  <% if(env.name){ %>name="<%=env.name%>" <% } %>
  <% if(env.id){ %>id="<%=env.id%>" <% } %>
  <% if(env.disabled){ %>disabled="<%=env.disabled%>" <% } %>
  <% if(env.validate){ %>data-validate="<%=env.validate%>" <% } %>
  <% if(env.label){ %>label="<%=env.label%>" <% } %>
  <% if(env.placeholder){ %>placeholder="<%=env.placeholder%>" <% } %>
  <% if(env.autocomplete){ %>autocomplete="<%=env.autocomplete%>" <% } %>
>
  <% if(env.staticContentObject){ %>
    <% if(env.staticContentObject.path){ %>
      <%- include(env.staticContentObject.path, {
        env: env.staticContentObject.pathObject
      }) %>
    <% } %>
  <% } else{ %>
    <%- env.content %>
  <% } %>
  <% if(env.tooltip){ %>
    <sl-tooltip content="" slot="suffix" hoist>
      <div class="field-status"></div>
    </sl-tooltip>
  <% } %>
</sl-input>