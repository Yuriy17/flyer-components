<div class="hidden-inputs">
  <input
    name="flight[<%= env.groupIndex %>]['cityAirport']"
    type="hidden"
    class="cityAirport input_airport"
    value='<%= env.cityAirportVal %>'
  />
  <input
    name="flight[<%= env.groupIndex %>]['cityCode']"
    type="hidden"
    class="cityCode"
    data-validation="required"
    value='<%= env.cityCodeVal %>'
  />
  <input
    name="flight[<%= env.groupIndex %>]['originEntityId']"
    type="hidden"
    class="originEntityId"
    value='<%= env.originEntityIdVal %>'
  />
