    env: {
      staticContentPath: 'templates/layouts/formFields/dateField.ejs',
      classes: 'form__input',
      validate: 'required;date:2',
      inputProps: {
        name: 'date',
        id: 'contactsDate',
        label: 'Date',
        readonly: "readonly",
        placeholder: '13 Apr 2024 – 20 Apr 2024',
