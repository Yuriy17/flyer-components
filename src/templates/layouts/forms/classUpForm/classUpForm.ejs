      env: {
        tooltip: true,
        classes: 'form__input form__field',
        name: 'email',
        id: 'classupEmail',
        validate: 'email;required',
        label: 'Your email',
        placeholder: 'Enter your email',
        autocomplete: true
      }
    }) %>
  </div>
  <%- include('templates/layouts/texts/formTermsText.ejs') %>
  <%- include('templates/components/button/slButton.ejs', {
    env: {
      classes: 'btn-primary btn-sm',
      type: 'submit',
      variant: 'primary',
      content: 'Subscribe',
    }
  }) %>
</form>
